<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="/css/style.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  
  <title>Blog</title>
</head>
<body>
  
 <!-- Navbar -->
 <nav id="navbar">

  <div id="logo">
    <img src="/css/messifcb.jpg" alt="Talha Zahid">
  </div>
  <ul>
    <li class="item"><a href="#">Welcome</a></li>
    <li class="item"><a href="/articles/specialfeatures">Special Features</a></li>
    <li class="item"><a href="/articles/supersports">Super Sports</a></li>
    <li class="item"><a href="/articles/contact">Contact Page</a></li>
  </ul>
</nav>
<form>
  <label for="fname">First name:</label><br>
  <input type="text" id="fname" name="fname"><br>
  <label for="lname">Last name:</label><br>
  <input type="text" id="lname" name="lname">
</form>



  
  
  <div class="container">
    <h1 class="mb-4"> Sports Articles</h1>
    <a href="/articles/new" class="btn btn-success">Create a New Article</a>

    <form>
      <label for="fname">First name:</label><br>
      <input type="text" id="fname" name="fname"><br>
      <label for="lname">Last name:</label><br>
      <input type="text" id="lname" name="lname">
    </form>
    
    

    <% articles.forEach(article => { %>
      
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= article.title %></h4>
          <div class="card-subtitle text-muted mb-2">
            <%= article.createdAt.toLocaleDateString() %>
          </div>
          <div class="card-text mb-2"><%= article.description %></div>
          <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
          <a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
          <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
     
      
    <% }) %>
    
  </div>



  <footer class="footer">
    <div class="section-center">
      <div  class="social-icons">
        <!-- social icon -->
        <a style="margin: 30px ;" href="https://www.facebook.com/"><i class="fa fa-facebook-square" style="font-size:35px;color:rgb(12, 12, 82);"></i></a>
        <!-- end of social icon -->
        <!-- social icon -->
        <a style="margin: 30px ; ;" href="https://www.instagram.com/accounts/login/"><i class="fa fa-instagram" style="font-size:35px;color:rgb(168, 8, 8);"></i></a>
        <!-- end of social icon -->
        <!-- social icon -->
        <a style="margin: 30px ;" href="https://www.youtube.com/"><i class="fa fa-youtube-play" style="font-size:35px;color:rgb(231, 4, 4);" href="https://www.google.com/"></i></a>
        <!-- end of social icon -->
      </div>
      <p class="footer-text">
       <span style="color: rgb(255, 255, 255);"><strong>Best Sports Blogs</strong> </span> 
      </p>
    </div>
  </footer>

</body>
</html>